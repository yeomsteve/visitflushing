<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Orderurl</th>
      <th>Imageurl</th>
      <th>Videourl</th>
      <th>Address</th>
      <th>Geocode</th>
      <th>Rating</th>
      <th>Foodtype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.orderurl %></td>
        <td><%= restaurant.imageurl %></td>
        <td><%= restaurant.videourl %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.geocode %></td>
        <td><%= restaurant.rating %></td>
        <td><%= restaurant.foodtype %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

